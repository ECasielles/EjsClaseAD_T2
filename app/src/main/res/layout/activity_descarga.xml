<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ejerciciosad_t2.ui.conexion.DescargaActivity"
    >

    <EditText
        android:id="@+id/edtSubida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="https://i.imgur.com/tGbaZCY.jpg"
        app:layout_constraintBottom_toTopOf="@+id/descargarImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/descargarArchivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="Descargar archivo"
        app:layout_constraintBaseline_toBaselineOf="@+id/descargarImagen"
        app:layout_constraintEnd_toStartOf="@+id/descargarImagen"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/descargarImagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Descargar imagen"
        app:layout_constraintBottom_toTopOf="@+id/imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/descargarArchivo"
        app:layout_constraintTop_toBottomOf="@+id/edtSubida"
        />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descargarImagen"
        app:srcCompat="@drawable/perro"
        />

</android.support.constraint.ConstraintLayout>
